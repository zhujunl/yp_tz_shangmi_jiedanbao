<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/ll_order_layout"
    android:paddingLeft="20dp"
    android:paddingTop="20dp"
    android:paddingRight="20dp"
    android:layout_height="98dp">
    <TextView
        android:id="@+id/item_tv_order_serial_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="流水号 50"
        android:textColor="#ff333333"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="22sp"
        />

    <TextView
        android:id="@+id/item_tv_order_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单号：21423423534525"
        android:textColor="#ff999999"
        app:layout_constraintTop_toBottomOf="@+id/item_tv_order_serial_num"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@+id/item_tv_order_serial_num"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/item_tv_order_price"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:minWidth="120dp"
        android:gravity="right"
        app:layout_constraintTop_toTopOf="@+id/item_tv_order_serial_num"
        app:layout_constraintBottom_toBottomOf="@+id/item_tv_order_serial_num"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="#ff333333"
        android:textSize="24sp"
        />

    <TextView
        android:id="@+id/item_tv_order_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2019-10-08 16:26"
        app:layout_constraintTop_toTopOf="@+id/item_tv_order_num"
        app:layout_constraintBottom_toBottomOf="@+id/item_tv_order_num"
        app:layout_constraintRight_toRightOf="@+id/item_tv_order_price"
        android:textColor="#ff999999"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/item_tv_order_style"
        android:layout_width="66dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@+id/item_tv_order_price"
        android:background="@drawable/style_bg"
        app:layout_constraintBottom_toBottomOf="@+id/item_tv_order_price"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="自提"
        android:textSize="14sp"
        app:layout_constraintRight_toLeftOf="@+id/item_tv_order_price"
        android:layout_marginRight="120dp"/>
    <TextView
        android:id="@+id/item_tv_order_print_state"
        android:layout_width="66dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@+id/item_tv_order_price"
        android:background="@drawable/printed_bg"
        app:layout_constraintBottom_toBottomOf="@+id/item_tv_order_price"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintRight_toLeftOf="@+id/item_tv_order_price"
        android:layout_marginRight="5dp"/>
    <View
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="1sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#F0F0F0"/>
</androidx.constraintlayout.widget.ConstraintLayout>