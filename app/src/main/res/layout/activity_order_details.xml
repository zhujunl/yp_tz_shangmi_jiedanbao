<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff4f4f4"
    android:orientation="vertical">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_title_layout"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:layout_height="75dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:padding="5dp"
            android:scaleType="center"
            android:onClick="back"
            android:src="@mipmap/zuo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_order_details_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ff333333"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/view_item_1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/details_item_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="22dp"
                    android:layout_marginRight="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单号"
                        android:textColor="#ff999999"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/tv_details_order_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ff333333"
                        android:gravity="right"
                        android:maxLines="1"
                        android:layout_marginLeft="20dp"
                        android:textSize="18sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="22dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="时间"
                        android:textColor="#ff999999"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/tv_details_order_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ff333333"
                        android:gravity="right"
                        android:maxLines="1"
                        android:layout_marginLeft="20dp"
                        android:textSize="18sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/updatalin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="22dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="核销时间"
                        android:textColor="#ff999999"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/tv_details_sure_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ff333333"
                        android:gravity="right"
                        android:maxLines="1"
                        android:layout_marginLeft="20dp"
                        android:textSize="18sp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/view_item_2"
                android:layout_width="match_parent"
                android:layout_height="173dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/details_item_bg"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="16dp"
                    android:text="免密支付"
                    android:textColor="#ff333333"
                    android:textSize="20sp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginRight="16dp"
                    android:background="@color/line"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginRight="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="用户名"
                        android:textColor="#ff999999"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/tv_details_order_user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ff333333"
                        android:gravity="right"
                        android:maxLines="1"
                        android:layout_marginLeft="20dp"
                        android:textSize="18sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="22dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="手机"
                        android:textColor="#ff999999"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/tv_details_order_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ff333333"
                        android:gravity="right"
                        android:maxLines="1"
                        android:layout_marginLeft="20dp"
                        android:textSize="18sp"
                        />
                </LinearLayout>
            </LinearLayout>
        <LinearLayout
            android:id="@+id/view_item_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:paddingRight="16dp"
            android:paddingTop="5dp"
            android:paddingLeft="16dp"
            android:paddingBottom="5dp"
            android:background="@drawable/details_item_bg"
            android:orientation="vertical">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:focusable="false"
                android:layout_height="wrap_content"
                android:overScrollMode="never"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line"/>
            <LinearLayout
                android:id="@+id/tv_pick_linear"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="55dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="打包费"
                    android:textColor="#ff999999"
                    android:textSize="18sp"
                    />
                <TextView
                    android:id="@+id/tv_pick_price"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="#ff333333"
                    android:textSize="18sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="55dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="小计"
                    android:textColor="#ff999999"
                    android:textSize="18sp"
                    />
                <TextView
                    android:id="@+id/tv_details_total_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff999999"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textSize="18sp"
                    />
                <TextView
                    android:id="@+id/tv_details_subtotal_price"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="#ff333333"
                    android:textSize="18sp"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/view_item_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="16dp"
            android:paddingRight="16dp"
            android:paddingTop="5dp"
            android:paddingLeft="16dp"
            android:paddingBottom="5dp"
            android:background="@drawable/details_item_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="315dp"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="备注"
                    android:textColor="#ff999999"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_details_note"
                    android:layout_width="111dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="#ff333333"
                    android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="22dp"
                    android:gravity="center"
                    android:layout_height="22dp"
                    android:text="促"
                    android:background="#FF3B30"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="促销优惠"
                    android:layout_marginLeft="5dp"
                    android:textColor="#ff333333"
                    android:textSize="18sp"
                    />
                <TextView
                    android:id="@+id/tv_details_reduction_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="#ff333333"
                    android:textSize="18sp"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="合计"
                    android:textColor="#ff333333"
                    android:textSize="18sp"
                    />
                <TextView
                    android:id="@+id/tv_details_total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textColor="#ffff3b30"
                    android:textSize="16sp"
                    />
            </LinearLayout>

        </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_height="88dp">

        <Button
            android:id="@+id/updata_st"
            android:layout_width="156dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/btn_sel"
            android:gravity="center"
            android:onClick="updata"
            android:text="核销"
            android:textColor="@color/white"
            android:textSize="24sp" />
        <Button
            android:id="@+id/print"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn_sel"
            android:textSize="24sp"
            android:onClick="print"
            android:textColor="@color/white"
            android:text="打印"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>