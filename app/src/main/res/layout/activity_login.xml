<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_ip"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/load_success"
        android:gravity="center"
        android:text="设置"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:padding="5dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="110dp"
        android:text="员工账号登录"
        android:textColor="#ff333333"
        android:textSize="40sp"
            app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="254dp"
        android:layout_marginRight="40dp"
        app:dividerPadding="1dp"
        app:divider="@drawable/line"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:showDividers="end"
        >

        <EditText
            android:id="@+id/edit_user_account"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="@null"
            android:textColorHint="#CCCCCC"
            android:gravity="center_vertical"
            android:textSize="24sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="#666"
            android:hint="输入用户名"
            android:inputType="numberDecimal" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_psw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginRight="40dp"
        app:divider="@drawable/line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_phone"
        app:showDividers="end">

        <EditText
            android:id="@+id/edit_user_psw"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="@null"
            android:textColorHint="#CCCCCC"
            android:textSize="24sp"
            android:textColor="#666"
            android:paddingLeft="5dp"
            android:hint="输入密码"
            android:paddingRight="5dp"
            android:gravity="center_vertical"
            android:inputType="numberDecimal" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <Button
        android:id="@+id/btn_login_user"
        android:layout_width="0dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toBottomOf="@+id/ll_psw"
        app:layout_constraintLeft_toLeftOf="@+id/ll_psw"
        app:layout_constraintRight_toRightOf="@+id/ll_psw"
        android:layout_marginTop="85dp"
        android:background="@drawable/btn_sel"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:text="登录"
        android:gravity="center"/>
</androidx.constraintlayout.widget.ConstraintLayout>